{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@components/*": ["./components/*"],
      "@config/*": ["./config/*"],
      "@lib/*": ["./lib/*"],
      "@mocks/*": ["./__mocks__/*"],
      "@pages/*": ["./pages/*"],
      "@public/*": ["./public/*"],
      "@tests/*": ["./__tests__/*"],
      "@theme/*": ["./theme/*"]
    }
  },
  "exclude": ["node_modules", "dist", ".next", "out", "next.config.js"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.json"]
}
