{
  "presets": [
    [
      "next/babel",
      {
        "styled-jsx": {
          "plugins": ["styled-jsx-plugin-sass"]
        }
      }
    ]
  ],
  "plugins": [
    [
      "module-resolver",
      {
        "root": ["./"],
        "alias": {
          "@components": "./components",
          "@config": "./config",
          "@lib": "./lib",
          "@mocks": "./__mocks__",
          "@pages": "./pages",
          "@public": "./public",
          "@server": "./server",
          "@tests": "./__tests__",
          "@theme": "./theme"
        }
      }
    ]
  ]
}
